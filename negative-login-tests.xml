<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >

<suite name="Linkedin Negative Login">

    <test name="Negative Login Tests Chrome">
        <parameter name="browserType" value="Chrome"/>
        <parameter name="envURL" value="https://www.linkedin.com/" />
        <classes>
            <class name="test.NegativeLoginTests.NegativeLoginEmptyLoginOrPasswordFieldsTest" />
            <class name="test.NegativeLoginTests.NegativeLoginInvalidLoginOrPasswordTest" />
            <class name="test.NegativeLoginTests.NegativeLoginCheckErrorForEmailFieldOnLoginSubmitPageTest" />
            <class name="test.NegativeLoginTests.NegativeLoginCheckErrorForPasswordFieldOnLoginSubmitPageTest" />
        </classes>
    </test>

    <test name="Negative Login Tests Firefox">
        <parameter name="browserType" value="Firefox"/>
        <parameter name="envURL" value="https://www.linkedin.com/" />
        <classes>
            <class name="test.NegativeLoginTests.NegativeLoginEmptyLoginOrPasswordFieldsTest" />
            <class name="test.NegativeLoginTests.NegativeLoginInvalidLoginOrPasswordTest" />
            <class name="test.NegativeLoginTests.NegativeLoginCheckErrorForEmailFieldOnLoginSubmitPageTest" />
            <class name="test.NegativeLoginTests.NegativeLoginCheckErrorForPasswordFieldOnLoginSubmitPageTest" />
        </classes>
    </test>

</suite>



